{% extends 'admin/simple/editor.html.twig' %}

{% set mainPath = '_user' %}
{% set extPath = '_edit' %}

{% set title = 'label.users'|trans %}

{%  block mainFields1 %}	
    {{ form_row(form.username, { 'label': 'label.name' }) }}
{%  endblock %}

{%  block moreFields1 %}
	{{ form_row(form.code, { 'label': 'label.user.code'|trans }) }}
	{{ form_row(form.roles, { 'label': 'label.user.roles'|trans }) }}
{%  endblock %}

{% block actions %}
	<div class="btn-group">
	    {{ form_widget(form.save, { 'icon': 'fa-save', 'label': 'action.save', 'attr': {'class': 'btn btn-success'} }) }}
	    <a type="button" class="btn btn-primary" href="{{ path(basePath ~ mainPath) }}">
	    	<i class="fa fa-close"></i>{{ 'action.back'|trans }}
		</a>
    </div>
{% endblock %}
{% extends 'base.html.twig' %}

{% set basePath = 'admin' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
	{% block navigationBar %}
		<nav class="navbar navbar-default navbar-fixed-top">
			<div class="container">
				{% block navigationHeader %}
					<div class="navbar-header">
						<button type="button" class="navbar-toggle collapsed" 
								data-toggle="collapse" 
								data-target="#bs-example-navbar-collapse-1" 
								aria-expanded="false">
					        <span class="sr-only">Toggle navigation</span>
					        <span class="icon-bar"></span>
					        <span class="icon-bar"></span>
					        <span class="icon-bar"></span>
				      	</button>
						<a class="navbar-brand" href="http://krk-dev.com">
							<img alt="Brand" src="{{ asset('/img/logo.png') }}" height="25">
						</a>
			    	</div>
		    	{% endblock %}
		    	
		    	{% block navigationList %}
					<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
		      			<ul class="nav navbar-nav navbar-right">
							<li {% if mainPath == '' %} class="active" {% endif %}><a href="{{ path('admin') }}">{{ 'label.admin'|trans }}</a></li>
							<li {% if mainPath == '_game' %} class="active" {% endif %}><a href="{{ path('admin_game') }}">{{ 'label.games'|trans }}</a></li>
							
		    				{% if is_granted('ROLE_ADMIN') %}
								<li {% if mainPath == '_subscription' %} class="active" {% endif %}><a href="{{ path('admin_subscription') }}">{{ 'label.subscriptions'|trans }}</a></li>
								<li {% if mainPath == '_user' and extPath != '_profile' %} class="active" {% endif %}><a href="{{ path('admin_user') }}">{{ 'label.users'|trans }}</a></li>
							{% endif %}
							
							<li {% if mainPath == '_user' and extPath == '_profile' %} class="active" {% endif %}><a href="{{ path('admin_user_profile') }}">{{ 'label.profile'|trans }}</a></li>
						</ul>
					</div>
				{% endblock %}
		  	</div>
		</nav>
	{% endblock %}
		
	{% block header %}
	<div class="page-header">
		<div class="container">
			<div class="row">
				<div class="col-sm-9">
					<h1>{{ title }}</h1>
				</div>
				<div class ="col-sm-3">
					<br>
					<p class ="text-sm-right">
						{{ 'label.welcome'|trans }} <strong>{{ app.user.username }}</strong>, 
						<a href="{{ path('fos_user_security_logout') }}">{{ 'label.logout'|trans }}</a>
					</p>
				</div>
			</div>
		</div>
	</div>
	{% endblock %}
		
	<div class="content">
	{% block content %}
	{% endblock %}
	</div>
	
	{% block footer %}
	<div class="footer">
  		<div class="container-fluid">
	    	<div class="col-lg-12">
	      		<p>&copy; 2014 KRK Developement</p>
	      		<div class="social-media">
	      			<a href="http://krk-dev.com"><i class="fa fa-globe"></i></a>
        			<a href="http://facebook.com/krk.developement"><i class="fa fa-facebook"></i></a>
	        		<a href="https://twitter.com/_krakers"><i class="fa fa-twitter"></i></a>
	        		<a href="https://pl.pinterest.com/krak3rs"><i class="fa fa-pinterest"></i></a>
	      		</div>
	    	</div>
	  	</div>
	</div>
	{% endblock %}
{% endblock %}
